%header{ :class => 'navbar navbar-fixed-top navbar-inverse' }
  .navbar-inner
    .container
      =link_to "RucPoc", '#', id: "logo"
      %nav
        %ul{ :class => 'nav pull-right' }
          %li= link_to "Home", '#'
          %li= link_to "Ayuda", '#'
          -if signed_in?
            %li= link_to "Los Usuarios", users_path
            %li#fat-menu.dropdown
              %a{:href => '#', :class => 'dropdown-toggle', :'data-toggle' => 'dropdown' }
                Usuario
                %b.caret
              %ul.dropdown-menu
                %li= link_to "Información del Usuario", current_user
                %li= link_to "Actualizar Información", edit_user_path(current_user)
                %li.divider
                %li= link_to "Log out", logout_path, method: "delete"
          -else
            %li= link_to "Log in", '/login'
          /