- provide(:title, @user.email)
%h1 Usuario:
.row
  %aside.span4
    %section
      %h1
        = @user.email
        - if @user.admin?
          = " -- aministrador"
        - elsif @user.supervisor?
          = " -- supervisor"
        /
      -if (current_user.admin? or current_user == @user)
        %p
          = link_to "Editar", edit_user_path(@user)
    