- provide(:title, "Editar Factura")
%h1 Editar Factura
.row
  %div{:class => "span6 offset3"}
    =form_for(@collection,  url: collection_path, method: :patch) do |f|
      = render partial: 'shared/error_messages', :locals => { :object => f.object }
      =f.label :internal_invoice_number, "Número interno de factura"
      =f.text_field :internal_invoice_number
      =f.label :amount_owed, "Cantidad debida"
      =f.number_field :amount_owed    
      =f.label :bounced_check_bank, "Nombre del banco del cheque devuelto"
      =f.text_field :bounced_check_bank
      =f.label :bounced_check_number, "Número del cheque devuelto"
      =f.number_field :bounced_check_number
      =f.label :notes, "Notas"
      =f.text_field :notes
      -if current_user.admin or current_user.supervisor
        =f.label "Pagada?", {class: 'checkbox inline checkbox-for-paid muted'}
        =f.check_box :paid? 
        %br
        =f.check_box :being_processed
        =f.label "En Processo?", {class: 'checkbox inline checkbox-for-paid text-warning'}
      %br
      =f.submit "Editar Factura", class: "btn btn-large btn-primary"
/
/ = form_tag @collection do
/   = check_box 
/
  