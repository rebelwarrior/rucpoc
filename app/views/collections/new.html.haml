%h1 Collections#new
%p Find me in app/views/collections/new.html.haml
- provide(:title, "Crear Factura Nueva")
%h1 Crear Una Factura Nueva
.row
  %div{:class => "span6 offset3"}
    =form_for(@collection) do |f|
      = render 'shared/error_messages'
      / =f.label :name
      / =f.text_field :name
      / =f.label :email
      / =f.text_field :email
      / =f.label :tel
      / =f.text_field :tel
      / =f.label :address
      / =f.text_field :address
      / =f.label :location, "Direccion Fisica"
      / =f.text_field :location
      / =f.label :contact_person
      / =f.text_field :contact_person
      / =f.label :employer_id_number
      / =f.text_field :employer_id_number
      / =f.submit "Crear Record de Deudor Nuevo", class: "btn btn-large btn-primary"
  /end  
