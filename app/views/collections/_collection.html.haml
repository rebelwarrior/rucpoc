%li{:class => "#{collection.paid? ? "green" : "red"}"}
  %span.content
    = link_to "#{collection.id}", collection
    = collection.amount_owed
    = "  --  "
    = collection.paid? ? "Pagada  --" : ""
    = "Actulizada hace: #{time_ago_in_words(collection.updated_at)}"
    = link_to "Editar", collection, method: :edit
    - if current_user.admin? or current_user.supervisor?
      = " | "
      = link_to "delete", collection, method: :delete, data: {confirm: "Confirme Borrar Factura: Â¿Seguro?"}