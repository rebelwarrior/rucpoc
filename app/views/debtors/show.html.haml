- provide(:title, "Record del Deudor")
%h1 Record del Deudor:
.row
  %aside.span6
    %section
      %h1
        = @debtor.name
        %br
      %p.grey
        = @debtor.email
        ="    ||   "
        = "tel. #{@debtor.tel}"
      %p
        = "Persona Contácto: #{@debtor.contact_person}"
        %br
        = "EIN: #{@debtor.employer_id_number}"
        %br
      %p
        = link_to "Editar Record del Deudor", edit_debtor_path
    %section
      %p
      - if @debtor.collections.any?
        %h3
          Facturas:
        %ol.microposts
          = render @collections
        = will_paginate @collections
      /end 
      %br   
      %p
        %a{:href => "#{url_for new_collection_path}", :class => "btn btn-large btn-primary"}
          Añadir Factura
          
  %aside.span4
    %section
      .table-responsive
        %table.table-bordered
          %thead
            %tr
              %th.span2
                Dirección Postal
              %td.span4
                = @debtor.address
          %tbody  
            %tr
            %tr
              %th.grey
                Dirección Física
              %td.grey
                = @debtor.location
        
    %section
      =yield :logs_sidebar 