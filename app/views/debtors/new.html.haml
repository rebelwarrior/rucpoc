-#coding: utf-8
- provide(:title, "Crear Record de Deudor")
%h1 Crear Record de Deudor Nuevo
.row
  -if @debtor.errors.any?
    %p
      Problemas con:
    - @debtor.errors.full_messages.each do |msg|
      %li.alert
        = msg
  /
  %div{:class => "span6 offset3"}
    =form_for(@debtor) do |f|
      = render partial: 'shared/error_messages', :locals => { :object => f.object }
      =f.label :name, "Nombre"
      =f.text_field :name
      =f.label :email, "Email"
      =f.email_field :email
      =f.label :tel, "Teléfono"
      =f.telephone_field :tel
      =f.label :address, "Dirección Postal"
      =f.text_field :address
      =f.label :location, "Dirección Física"
      =f.text_field :location
      =f.label :contact_person, "Persona Contácto"
      =f.text_field :contact_person
      =f.label :employer_id_number, "Numbero de SS Patronal"
      =f.text_field :employer_id_number
      =f.submit "Crear Record de Deudor Nuevo", class: "btn btn-large btn-primary"
  /end  
-if @user.admin?
  .row
    %a{:href => "#{'url_for import_path'}", :class => "btn btn-large btn-primary"}
        Para Importar CSV