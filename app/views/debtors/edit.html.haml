-#coding: utf-8
- provide(:title, "Editar Record del Deudor")
%h1 Editar Record del Deudor 
.row
  %div{:class => "span6 offset3"}
    =form_for(@debtor) do |f|
      = render partial: 'shared/error_messages', :locals => { :object => f.object }
      =f.label :name, "Nombre"
      =f.text_field :name
      =f.label :email, "Email"
      =f.email_field :email
      =f.label :tel, "Teléfono"
      =f.telephone_field :tel
      =f.label :address, "Dirección Postal"
      =f.text_field :address
      =f.label :location, "Dirección Física"
      =f.text_field :location
      =f.label :contact_person, "Persona Contácto"
      =f.text_field :contact_person
      =f.label :employer_id_number, "Numbero de SS Patronal"
      =f.text_field :employer_id_number
      =f.submit "Actualizar Record del Deudor", class: "btn btn-large btn-primary"
  /end  
