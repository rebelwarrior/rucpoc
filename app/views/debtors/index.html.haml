- provide(:title, "Lista de Deudores")
.row
  = form_tag debtors_path, :method => 'get' do
    -# debtors_path might not be best?
    %p
      = text_field_tag :search, params[:search] 
      = submit_tag "Buscar", :name => nil 

  /end
=# "Search Params? #{!params[:search].nil?}"
=# "Debtor #{@debtors.empty?}"
%h1 Lista de Deudores
-if params[:search].nil?
  = will_paginate

  %ul.debtors
    = render @debtors
    /

  = will_paginate
-elsif @debtors.empty?
  %h4="No hay resultados para: #{params[:search]}" 
-else
  %h4="Resultados para: #{params[:search]}" 
  %ul.debtors
    = render @debtors
/